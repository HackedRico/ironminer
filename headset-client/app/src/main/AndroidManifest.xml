<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Network -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- Camera + Mic (WebRTC) -->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />

    <!-- Foreground service for persistent streaming -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_CAMERA" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_MICROPHONE" />

    <!-- Wake lock to keep CPU alive while streaming -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <!-- Bluetooth headset audio routing -->
    <uses-permission android:name="android.permission.BLUETOOTH" android:maxSdkVersion="30" />
    <uses-permission android:name="android.permission.BLUETOOTH_CONNECT" />

    <!-- Foreground service notification (Android 13+) -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <uses-feature android:name="android.hardware.camera" android:required="true" />
    <uses-feature android:name="android.hardware.microphone" android:required="true" />

    <application
        android:name=".HeadsetApplication"
        android:label="IronSite Headset"
        android:theme="@android:style/Theme.Material.NoActionBar"
        android:allowBackup="false">

        <!-- Placeholder main activity â€” replace with real UI in production -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!--
            Streaming foreground service.
            foregroundServiceType="camera|microphone" is required on Android 12+
            for background access to camera and mic.
        -->
        <service
            android:name=".StreamingService"
            android:foregroundServiceType="camera|microphone"
            android:exported="false" />

    </application>
</manifest>
